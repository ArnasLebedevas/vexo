@model Vexo.Application.Common.Models.LoginCodeEmailModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <style>
        body {
            background: #f9f9f9;
            padding: 20px;
            font-family: Arial, Helvetica, sans-serif;
        }

        .container {
            max-width: 480px;
            margin: auto;
            padding: 24px;
            background: #ffffff;
            border-radius: 8px;
            border: 1px solid #e5e5e5;
            color: #222;
        }

        .code-box {
            margin: 20px 0;
            font-size: 26px;
            font-weight: bold;
            padding: 12px 16px;
            background: #f3f3f3;
            border-radius: 6px;
            text-align: center;
            letter-spacing: 4px;
        }

        .button {
            display: inline-block;
            padding: 14px 26px;
            background-color: #4e73df;
            color: white !important;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            border-radius: 6px;
            margin-top: 20px;
        }

        .footer {
            margin-top: 32px;
            font-size: 12px;
            color: #888;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Passwordless Login</h2>

        <p>Hello,</p>

        <p>Use the login code below to sign in:</p>

        <div class="code-box">
            @Model.Code
        </div>

        <p>Or click the button to log in instantly:</p>

        <a class="button" href="@Model.LoginUrl">
            Log In
        </a>

        <p class="footer">
            If you didn’t request this email, you can safely ignore it.
        </p>
    </div>
</body>
</html>